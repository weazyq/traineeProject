@{
}

@using Domain.Groups;
@model IEnumerable<Group>

<!DOCTYPE html>
<html>
<head>
    <title>Products</title>
    <meta charset="utf-8" />
    <title>Продукты</title>
</head>
<body>
    <h2>Продукты:</h2>
    <table>
        <thead>
            <tr>
                <th>ID </th>
                <th>Имя продукта </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model)
            {
                <tr>
                    <td>@group.Id</td>
                    <td>@group.Name</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
